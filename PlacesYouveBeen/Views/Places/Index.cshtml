<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Travel Blog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using PlacesYouveBeen.Models;

    <h1>List of Places</h1>

    @if (Model.Count == 0)
    {
      <p>There are no places in the list.</p>
    }
    <ul>
      @foreach (Place place in Model)
      {
        <li><a href='/places/@place.Id'>@place.Location</a></li>
      }
    </ul>
    <a href="/places/new">Add a new place.</a>
    <form action="/places/delete" method ="post">
      <button type="submit" name="button">Clear All Places</button>
    </form>
  </body>
</html>